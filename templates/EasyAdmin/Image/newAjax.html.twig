{% form_theme form with easyadmin_config('design.form_theme') %}

{{ form(form, {'action': '/admin/?action=newAjax&entity=Image'}) }}

<script type="text/javascript">
    var formId = '{{ form.vars['attr']['id'] }}';
    var $form = $('#'+formId);

    $($form).on('submit', function(event) {
        event.preventDefault();
        var url = $(this).attr('action');
        var method = $(this).attr('method');

        var fieldReference = $($form).closest('#media-field-reference').attr('data-field-reference');

        $.ajax({
            url: url,
            type: method,
            data: new FormData($(this)[0]),

            cache: false,
            contentType: false,
            processData: false,

            // Custom XMLHttpRequest
            xhr: function() {
                var myXhr = $.ajaxSettings.xhr();
                if (myXhr.upload) {
                    // For handling the progress of the upload
                    myXhr.upload.addEventListener('progress', function(e) {
                        if (e.lengthComputable) {
                            $('progress').attr({
                                value: e.loaded,
                                max: e.total
                            });
                        }
                    } , false);
                }
                return myXhr;
            },
            error: function(xhr, ajaxOptions, thrownError) {
                console.log(xhr.responseText);
            },
            success: function(data) {
                var fieldReference = $($form).closest('#media-field-reference').attr('data-field-reference');

                $container = $('body').find('#container-'+fieldReference);

                // Update name
                $($container).find('div.image-preview div.name').html(data.name);

                // Update image caption
                $($container).find('div.image-preview div.preview img').attr('src', data.image);

                $formElement = $('body').find('#'+fieldReference);

                // Deselect previous
                $($formElement).find('option:selected').removeAttr('selected');

                // Add new value
                $($formElement).append($('<option>', {
                    value: data.id,
                    text: data.name
                }));

                // Select choosen id
                $($formElement).val(data.id);

                $($form).addClass('js-modal-close');
            }
        });

    });

</script>